/*
控制最左边的数码管输出数字0
*/

#include "reg52.h"

typedef unsigned int u16;
typedef unsigned char u8;

#define SMG_PORT P0//定义哪些端口控制段码

u8 gsmg_code[17]={0x3f,0x06,0x5b,0x4f,0x66,0x6d,0x7d,0x07, 0x7f,0x6f,0x77,0x7c,0x39,0x5e,0x79,0x71}; //共阴极数码管显示0——F的段码数据

void main()
{
	SMG_PORT=gsmg_code[0];
	while(1)
	{
		
	}
}
